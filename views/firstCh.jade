extends layout

block content
    div(class="bgImg")
        div(class="topbar")
            p(class="route053") Route 053
            //- button(class="", onclick="goBack()")
            input(type="image" src="/images/back.png" class="backbutton" alt="Back button" onclick="goBack()")
    .card-deck-wrapper
        .card-deck
            // Card 1
            .card.text-center(onclick="doFun()")
                img.card-img-top.img-padding(src='/images/fun.png', alt='Fun')
                .card-body
                    h5 Ik wil iets leuks doen!
                    p.card-text Alles van poolen tot musea en veel meer
            // Card 2
            .card.text-center(onclick="goShopping()")
                img.card-img-top.img-padding(src='/images/shoppen.png', alt='Shopping')
                .card-body
                    h5 Ik wil gaan shoppen
                    p.card-text Jij kiest de winkels en wij maken de route
            // Card 3
            .card.text-center(onclick="eatFood()")
                img.card-img-top.img-padding(src='/images/eten.png', alt='Food')
                .card-body
                    h5 Ik wil iets eten of drinken
                    p.card-text Restaurants, Cafes, Terrasjes, Bars