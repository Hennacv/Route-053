extends layout

block content
    div(class="bgImg")
        div(class="topbar")
            p(class="route053") Go shopping
            input(type="image" src="/images/back.png" class="backbutton" alt="Back button" onclick="goBack()")
    .card-deck-wrapper1
        .card-deck
            // Card 1
            .card.text-center(onclick="somethingSpecific()" )
                img.card-img-top.img-padding(src='/images/something_specific.png', alt='Specific')
                .card-body
                    h5 Something specific
                    //- p.card-text Alles van poolen tot musea en veel meer
            // Card 2
            .card.text-center(onclick="goToRoute()")
                img.card-img-top.img-padding(src='/images/create_shop_route.png', alt='Creat route')
                .card-body
                    h5 Create route 
                    //- p.card-text Jij kiest de winkels en wij maken de route