extends layout

block content
    div(class="bgImg")
        div(class="topbar")
            p(class="route053") Food
            //- button(class="", onclick="goBack()")
            input(type="image" src="/images/back.png" class="backbutton" alt="Back button" onclick="goBack()")
    .card-deck-wrapper
        .card-deck
            // Card 1
            .card.text-center(onclick="fetchRestaurants('Terras')")
                img.card-img-top.img-padding(src='/images/terras.png', alt='Terras')
                .card-body
                    h5 Terras
                    //- p.card-text Alles van poolen tot musea en veel meer
            // Card 2
            .card.text-center(onclick="fetchRestaurants('Cafe')")
                img.card-img-top.img-padding(src='/images/cafe.png', alt='Cafe')
                .card-body
                    h5 Cafe
                    //- p.card-text Jij kiest de winkels en wij maken de route
            // Card 3
            .card.text-center(onclick="fetchRestaurants('Restaurant')")
                img.card-img-top.img-padding(src='/images/restaurant.png', alt='Restaurant')
                .card-body
                    h5 Restaurant
                    //- p.card-text Restaurants, Cafes, Terrasjes, Bars