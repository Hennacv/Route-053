extends layout

block content
    div(class="bgImg")
        div(class="topbar")
            p(class="route053") Culture
            input(type="image" src="/images/back.png" class="backbutton" alt="Back button" onclick="goBack()")
    .card-deck-wrapper
        .card-deck
            div(class="card text-center" onclick="selectedCulture(this, 'Museum')")
                img.card-img-top.img-padding(src='/images/museum.png', alt='Museum')
                .card-body
                    h5 Musea
            div(class="card text-center" onclick="selectedCulture(this, 'Kerk')")
                img.card-img-top.img-padding(src='/images/church.png', alt='Kerk')
                .card-body
                    h5 Kerken
            div(class="card text-center" onclick="selectedCulture(this, 'Gallery')")
                img.card-img-top.img-padding(src='/images/gallery.png', alt='Gallery')
                .card-body
                    h5 Gallerijen
    button(id="submit-options" onclick="fetchCulture(selectedCultures)") Submit

